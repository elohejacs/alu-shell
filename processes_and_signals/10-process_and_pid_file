#!/usr/bin/env bash
# i love you

PID_FILE="/var/run/myscript.pid"

# Function to clean up PID file and exit
clean_up() {
    if [ -f "$PID_FILE" ]; then
        rm "$PID_FILE"
        exit 0
    else
        echo "$PID_FILE not found"
        exit 1
    fi
}

# Store the current process ID in a PID file
echo $$ > "$PID_FILE"
if [ $? -ne 0 ]; then
    echo "Failed to create PID file"
    exit 1
fi

# Call the clean_up function when the script exits
trap clean_up EXIT

# Simulate some work (add your actual script logic here)
sleep 10  # Replace with your actual script logic

# Check if the process is running
if [ -f "$PID_FILE" ]; then
    echo "OK"
else
    echo "10-process_and_pid_file not running"
fi

